{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    //"allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@src/*": [ "src/*" ],
      "@config/*": [ "src/config/*" ],
      "@controllers/*": [ "src/controllers/*" ],
      "@routes/*": [ "src/routes/*" ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}