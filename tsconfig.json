{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"*": [
				"../node_modules/*"
			],
			"@app/*": [ "app/*" ],
			"@config/*": [ "app/config/*" ],
			"@models/*": [ "app/models/*" ],
			"@utils/*": [ "app/utils/*" ],
			"@routes/*": [ "app/routes/*" ],
			"@controllers/*": [ "app/controllers/*" ],
			"@middlewares/*": [ "app/middlewares/*" ],
			"@init/*": [ "app/init/*" ],
			"@tests/*": [ "tests/*" ]
		},
		/* Advanced Options */
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-is/lib/transform-inline/transformer" }
		],
	},
	"include": [
		"**/*"
	],
}